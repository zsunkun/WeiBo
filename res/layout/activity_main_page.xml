<com.example.ui.SlidingMenu xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:orientation="horizontal" >

        <include layout="@layout/layout_menu" />

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/background_home" >

            <include layout="@layout/layout_pull_to_refresh" />

            <ImageButton
                android:id="@+id/button_menu_switch"
                android:layout_width="18dp"
                android:layout_height="20dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/img_switch_menu"
                android:padding="10dp" />
        </FrameLayout>
    </LinearLayout>

</com.example.ui.SlidingMenu>